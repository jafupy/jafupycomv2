---
interface Props {
	class?: string;
}

const { class: className } = Astro.props;

import { cn } from "../lib";
import Nav from "../components/root/Nav.astro";
import Footer from "../components/root/Footer.astro";
import Toaster from "$/toasts.svelte";

// import SearchMenu from "$/components/root/search-menu.svelte";
import SearchButton from "$/components/root/search-button.svelte";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{"Jafu.py"}</title>
	</head>
	<body class="overflow-x-hidden scroll-smooth bg-grey-950 pt-12 text-white px-4">
		<Nav />

		<!-- <SearchMenu client:load /> -->

		<main
			class={cn(
				"prose-grey justify-center prose prose-invert mx-auto flex min-h-screen w-full max-w-5xl flex-col items-center px-0 py-12",
				className
			)}>
			<slot />
		</main>

		<Footer />

		<Toaster client:only="svelte" />

		<div
			class="absolute left-1/2 top-0 -z-10 aspect-square w-screen max-w-52 -translate-x-1/2 -translate-y-1/2 blur-3xl sm:scale-[3] bg-prussian-blue-700">
		</div>
	</body>
</html>

<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&display=swap");

	section {
		@apply mx-auto;
	}

	main {
		scroll-behavior: smooth;
		scroll-snap-align: start;
		scroll-snap-type: proximity;
	}
	article > aside {
		@apply sticky top-20 flex flex-col items-center justify-center;
	}

	body {
		--grid-size: 5rem;
		--grid-color: hsla(199deg, 10.1%, 57.3%, 0.04);
		--grid-bg-color: hsla(200deg, 16.7%, 7.06%, 1);

		background: linear-gradient(
				0deg,
				transparent 24%,
				var(--grid-color) 25%,
				var(--grid-color) 26%,
				transparent 27%,
				transparent 74%,
				var(--grid-color) 75%,
				var(--grid-color) 76%,
				transparent 77%,
				transparent
			),
			linear-gradient(
				90deg,
				transparent 24%,
				var(--grid-color) 25%,
				var(--grid-color) 26%,
				transparent 27%,
				transparent 74%,
				var(--grid-color) 75%,
				var(--grid-color) 76%,
				transparent 77%,
				transparent
			);
		background-size: var(--grid-size) var(--grid-size);
	}
	body::after {
		z-index: -49;
		content: "";
		position: fixed;
		top: 0;
		left: 0;
		height: 100%;
		width: 100%;
		background: radial-gradient(circle at center, transparent, var(--grid-bg-color) 80%);
	}

	article > main > h1:first-child {
		@apply mx-auto text-center font-mono text-5xl font-normal;
	}
	/* 
*:focus {
	@apply outline outline-blue-500;
}  */

	section {
		@apply px-5;
	}
</style>
